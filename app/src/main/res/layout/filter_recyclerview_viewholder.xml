<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filterRecyclerviewViewHolderLayout"
    android:clickable="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout android:id="@+id/filterTexts"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:layout_margin="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/filterTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Life Story Lines"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/filterSubtitle"
                android:text="SHOW LIFE STORY LINES"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="12sp"/>

        </LinearLayout>

        <Switch
            android:id="@+id/filterSwitch"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:paddingRight="10dp"/>

    </LinearLayout>


</LinearLayout>